<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tasks_title_button_backbround"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:padding="10dp"
        >
        <LinearLayout
            android:id="@+id/tasks_title_leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:src="@drawable/home"
                android:maxWidth="@dimen/tasks_title_buttons_width"
                android:minWidth="@dimen/tasks_title_buttons_width"
                android:maxHeight="@dimen/tasks_title_buttons_height"
                android:minHeight="@dimen/tasks_title_buttons_height"
                android:layout_height="@dimen/tasks_title_buttons_height"
                android:layout_width="@dimen/tasks_title_buttons_width"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tasks_title_middleButton"
            android:background="@drawable/tasks_title_button_backbround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tasks_title_rightButton"
            android:layout_toStartOf="@+id/tasks_title_rightButton"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            >
            <ImageView
                android:src="@drawable/envelope"
                android:maxWidth="@dimen/tasks_title_buttons_width"
                android:minWidth="@dimen/tasks_title_buttons_width"
                android:maxHeight="@dimen/tasks_title_buttons_height"
                android:minHeight="@dimen/tasks_title_buttons_height"
                android:layout_height="@dimen/tasks_title_buttons_height"
                android:layout_width="@dimen/tasks_title_buttons_width"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tasks_title_rightButton"
            android:background="@drawable/tasks_title_button_backbround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:src="@drawable/settings"
                android:maxWidth="@dimen/tasks_title_buttons_width"
                android:minWidth="@dimen/tasks_title_buttons_width"
                android:maxHeight="@dimen/tasks_title_buttons_height"
                android:minHeight="@dimen/tasks_title_buttons_height"
                android:layout_height="@dimen/tasks_title_buttons_height"
                android:layout_width="@dimen/tasks_title_buttons_width"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>